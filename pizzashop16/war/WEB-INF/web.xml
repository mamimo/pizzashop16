<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
<servlet>
    <servlet-name>add_pizzadata</servlet-name>
    <servlet-class>jp.pizza.AddPizzaServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>add_pizzadata</servlet-name>
    <url-pattern>/add</url-pattern>
</servlet-mapping>
	<servlet>
    <servlet-name>del_pizzadata</servlet-name>
    <servlet-class>jp.pizza.DelPizzaServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>del_pizzadata</servlet-name>
    <url-pattern>/del</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>edit_pizzadata</servlet-name>
    <servlet-class>jp.pizza.EditPizzaServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>edit_pizzadata</servlet-name>
    <url-pattern>/edit</url-pattern>
</servlet-mapping>
	<servlet>
		<servlet-name>PizzaShop</servlet-name>
		<servlet-class>jp.pizza.PizzaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PizzaShop</servlet-name>
		<url-pattern>/pizzashop</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
